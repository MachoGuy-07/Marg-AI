PORT=5000
# Option A: paste full URI from Mongo Atlas (recommended)
# MONGO_URI=mongodb+srv://<user>:<password>@cluster0.xxxxx.mongodb.net/ai-interview?retryWrites=true&w=majority
MONGO_URI=mongodb://127.0.0.1:27017/ai-interview
# Option A2: if SRV DNS fails, paste Atlas "Standard connection string" here
# MONGO_URI_DIRECT=mongodb://<user>:<password>@ac-xx-shard-00-00.xxxxx.mongodb.net:27017,ac-xx-shard-00-01.xxxxx.mongodb.net:27017,ac-xx-shard-00-02.xxxxx.mongodb.net:27017/ai-interview?ssl=true&replicaSet=atlas-xxxx-shard-0&authSource=admin&retryWrites=true&w=majority

# Option B: provide parts (used when MONGO_URI is empty)
# MONGO_USER=
# MONGO_PASSWORD=
# MONGO_CLUSTER=cluster0.xxxxx.mongodb.net
# MONGO_DB_NAME=ai-interview
JWT_SECRET=replace_with_a_secure_random_secret
OPENAI_API_KEY=
GOOGLE_CLIENT_ID=your_google_oauth_web_client_id
CLIENT_ORIGIN=http://localhost:3000
